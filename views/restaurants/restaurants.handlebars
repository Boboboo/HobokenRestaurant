<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
    <link  rel="stylesheet" href="../../public/css/restaurants.css" type="text/css">
     
  </head>

  <body>

    {{>header}}

    <!-- Main jumbotron for a primary marketing message or call to action -->
    <div class="jumbotron">
      <div class="container">
        <p><a class="btn btn-lg learnmore" href="/restaurants/all" role="button">Learn more &raquo;</a></p>
      </div>
    </div>

    <div class="icons">
          <div class="container">
              <div class="row restaurant" >
                {{#each theRestaurants}}
                <div class="single">
                    <div class="bodyImage">
                        <h3> <img src="../../public/image/restaurant.png" width="30" height="30" align="right"> {{this.R_name}}</h3>
                    </div>
                    
                    <p>{{#each this.R_cuisine}}
                      <span class="glyphicon glyphicon-heart"></span> {{this}} &nbsp  &nbsp  &nbsp 
                    {{/each}}</p>
              
                    <div  class="review">
                      <p>{{this.R_review  }} </p>
                    </div>
                    </br>
                    <a class="btn btn-default viewdetails" href="/restaurants/{{this._id}}" role="button">View details &raquo;</a></p>     
                </div>
                {{/each}}    
          </div>   
      <hr>

      {{>footer}} 
        </div>
    </div>

    <script src="../../public/js/restaurants.js"></script>

  </body>
</html>
